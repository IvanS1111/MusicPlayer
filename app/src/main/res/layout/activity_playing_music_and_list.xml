<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayingMusicAndListActivity"
    android:orientation="vertical"
    android:background="@drawable/shape">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="420dp">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/SongImage"
            android:src="@drawable/music_icon"
            android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/SongName"
                android:layout_below="@id/SongImage"
                android:layout_marginTop="10dp"
                android:text="Song name"
                android:textColor="@color/design_default_color_secondary"
                android:gravity="center"
                android:textSize="25sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp">
            <ImageView
                android:id="@+id/previous_btn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_skip_previous"
                android:layout_marginLeft="90dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:id="@+id/next_btn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_skip_next"
                android:layout_marginRight="90dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:id="@+id/start_btn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_play_arrow"
                android:layout_marginRight="70dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/repeat_image_view"
                android:src="@drawable/ic_repeat_one_gray"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                />
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/sound_image"
                android:src="@drawable/ic_volume_gray"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@id/SongName"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="00:00"
                android:layout_marginLeft="10dp" />
            <TextView
                android:id="@+id/endttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="00:00"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>
            <SeekBar
                android:id="@+id/SeekBar"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycleview2"
        android:scrollbars="vertical"
        android:background="#44000000"/>


</LinearLayout>